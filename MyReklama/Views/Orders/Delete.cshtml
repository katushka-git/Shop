@model MyReklama.Models.Order



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h3>Вы действительно хотите удалить заказ?</h3>
    <div>
       
        <hr />
        <dl class="dl-horizontal">
            <dt>
               Клиент
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Client.FIO)
            </dd>
    
            <dt>
               Работник
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Employee.FIO)
            </dd>
    
            <dt>
               Наименование услуги
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Service.Name)
            </dd>
    
            <dt>
                Дата заказа
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.DateOrder)
            </dd>
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Удалить" class="btn btn-default" /> |
                @Html.ActionLink("Назад", "Index")
            </div>
        }
    </div>
</body>
</html>
