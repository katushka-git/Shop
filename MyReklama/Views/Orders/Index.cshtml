@model IEnumerable<MyReklama.Models.Order>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Добавить новый заказ", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                ФИО КЛИЕНТА
            </th>
            <th>
                ФИО РАБОТНИКА
            </th>
            <th>
               НАИМЕНОВАНИЕ УСЛУГИ
            </th>
            <th>
               ДАТА
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOrder)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Подробнее", "Details", new { id=item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
