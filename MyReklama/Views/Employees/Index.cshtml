@model MyReklama.Models.IndexViewModel2
@using MyReklama.Helpers

<!DOCTYPE html>

<html>
<h3>Наши работники</h3>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Добавить нового работника", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                ФИО работника
            </th>
            <th>
                Адрес
            </th>
            <th>
                Номер телефона
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.NumberOrder)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model.Employee)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FIO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.NumberOrder)
                    </td>*@
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                    @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    <div class="btn-group">
        @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
    </div>
</body>
</html>
