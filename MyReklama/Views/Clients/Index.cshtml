@model IEnumerable<MyReklama.Models.Client>


<!DOCTYPE html>

<html>
<h2>Наши клиенты</h2>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Добавить нового клиента", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
               ФИО клиента
            </th>
            <th>
                Наименование компании
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Adres)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.Tel)
            </th>*@
            <th>
               Город
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Index)
            </th>*@
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCompany)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.Tel)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Index)
            </td>*@
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
