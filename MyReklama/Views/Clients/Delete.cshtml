@model MyReklama.Models.Client



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h3>Вы действительно хотите удалить клиента?</h3>
    <div>
        
        <hr />
        <dl class="dl-horizontal">
            <dt>
                ФИО
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.FIO)
            </dd>
    
            <dt>
               Наименование компании
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.NameCompany)
            </dd>
    
            <dt>
               Адресс
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Adres)
            </dd>
    
            <dt>
              Номер телефона
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Tel)
            </dd>
    
            <dt>
               Город
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>
    
            <dt>
               Индекс
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Index)
            </dd>
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Удалить" class="btn btn-default" /> |
                @Html.ActionLink("Назад", "Index")
            </div>
        }
    </div>
</body>
</html>
