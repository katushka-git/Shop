@model IEnumerable<MyReklama.Models.Service>



<!DOCTYPE html>

<html>
<h3>Наши услуги</h3>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
   
    <table class="table">
        <tr>
            <th>
                №
            </th>
            <th>
                Наименование услуги
            </th>
            <th>
                Цена
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
           
        </tr>
    }
    
    </table>
</body>
</html>
